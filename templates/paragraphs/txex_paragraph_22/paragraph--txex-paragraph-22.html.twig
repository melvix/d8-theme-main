{% extends "paragraph.html.twig" %}

{% block paragraph %}

  {% set paragraph_22_items = [] %}
  {% set tempArray4 = [] %}
  {% set tempArray5 = [] %}


  {% for key, child in content['field_para_ref_02'] if key|first != '#' %}
    {% set paragraph_22_items = paragraph_22_items|merge({ (key) : (child)}) %}
  {% endfor %}


  {% for key, child in content.field_variant_01 if key|first != '#' %}
    {% set tempArray4 = tempArray4|merge({(key) : (child),}) %}
  {% endfor %}

  {% for key, child in tempArray4 %}
    {% set tempArray5 = tempArray5|merge({(key) : (child['#markup']),}) %}
  {% endfor %}
  {% set tempArray5 = tempArray5|default({1 : 'horizontal', 2 : 'feature-100' }) %}


{% set tempArray5 = tempArray5|merge({'paragraph-wrapper' : 'paragraph-wrapper',}) %}
{# "flexbox_modifiers_additional": {1 : 'horizontal', 2 : 'feature-100', 3 : 'ADDITIONAL-2'} #}
  {% include "@base/layouts/layout/00-layout.twig" with {
    "layout_base_class": 'flexbox',
    "layout_modifiers": tempArray5,
    "layout_items": paragraph_22_items,
    "layout_modifiers_additional": {1 : 'vertical'}
  }%}

{% endblock paragraph %}

