{% extends "paragraph.html.twig" %}

{% block content %}

  {% set paragraph_02_items = [] %}
  {% for key, child in content['field_para_in_para'] if key|first != '#' %}
    {% set paragraph_02_items = paragraph_02_items|merge({ (key) : (child)}) %}
  {% endfor %}

  {% embed "@organisms/03-flex-layout-3/00-flex-layout-3.twig" with {
    "flex_layout_3_modifiers": {1 : 'horizontal', 2 : 'feature-100' },
    "flex_layout_3_base_class": paragraph_02_base_class,
    "flex_layout_3_items": paragraph_02_items,
    "flex_layout_3_flexbox_extra": {1 : 'horizontal', 2 : 'feature-100'}
  }%}
    {% block flexbox_block %}
      {{ parent() }}
    {% endblock flexbox_block %}
  {% endembed %}

{% endblock content %}

