{% extends "paragraph.html.twig" %}

{% block content %}
  {{ kint(content) }}
  {{ kint(content['field_para_in_para']) }}

  {% embed "@organisms/00-flex-layout-1/flex-layout-1.twig" with {
    "flex_layout_1_modifiers": {1 : 'columns-2' },
    "flex_layout_1_items": content['field_para_in_para'],
  }%}

    {% block flex_grid_content %}

    {% for key, child in content['field_para_in_para'] if key|first != '#' %}
      <div>{{ child }}</div>
    {% endfor %}

    {% endblock flex_grid_content %}

    {% block flex_layout_1_block %}

      {% block flex_grid_block %}

        {% for item in items %}

          {% set temp_item_block %}
            {%- include "@molecules/05-test/test.twig" with {
              "test_items": item,
            } -%}
          {% endset %}

          {% include "@base/layouts/grid-item/_grid-item.twig" with {
            "grid_item_blockname": flex_layout_1_base_class,
            "grid_item_content": temp_item_block,
          } %}

        {% endfor %}

      {% endblock flex_grid_block %}

    {% endblock flex_layout_1_block %}

  {% endembed %}

{% endblock content %}

