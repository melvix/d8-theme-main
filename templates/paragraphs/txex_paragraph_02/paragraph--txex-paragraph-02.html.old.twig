{% extends "paragraph.html.twig" %}

{% set paragraph_02_base_class = 'paragraph-02' %}

{% block content %}

  {% set paragraph_02_items = [] %}
  {% for key, child in content['field_para_in_para'] if key|first != '#' %}
    {% set paragraph_02_items = paragraph_02_items|merge({ (key) : (child)}) %}
  {% endfor %}

  {% include "@organisms/00-flex-layout-1/flex-layout-1.twig" with {
    "flex_layout_1_modifiers": {1 : 'columns-2' },
    "flex_layout_1_base_class": paragraph_02_base_class,
    "flex_layout_1_items": paragraph_02_items,
  }%}


{% endblock content %}

